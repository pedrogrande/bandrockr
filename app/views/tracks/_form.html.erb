<%= simple_form_for(@track) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :album %>
    <%= f.input :info %>
    <%= f.input :buy_link %>
    <%= f.input :embed_link, label: 'Paste the embed link here' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
